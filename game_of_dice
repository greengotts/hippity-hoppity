<?php

$a = mt_rand(1, 6);
$b = mt_rand(1, 6);

$c = mt_rand(1, 6);
$d = mt_rand(1, 6);

echo "you threw $a и $b, computer threw $c и $d \n";

$sum1 = $a+$b;
$sum2 = $c+$d;

if (($a==$b) && ($c==$d)) {
	echo "luck! Two doubles! \n";
} elseif ($sum1>$sum2) {
	echo "you win! \n";
} elseif ($sum1<$sum2) {
	echo "you lose! \n";
} elseif ($sum1==$sum2) {
	echo "friendship win! \n";
	exit();
}
?>
